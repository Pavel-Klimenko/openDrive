<div class="card">
    <div class="card-body">
        <h5 class="mb-0 text-primary font-weight-bold">{{ diskInfo.TOTAL_SIZE.FOR_DISPLAY }} <span class="float-end text-secondary">50 GB</span></h5>
        <p class="mb-0 mt-2"><span class="text-secondary">Used disk space</span> {#<span class="float-end text-primary">Upgrade</span>#}
        </p>

        <div class="progress mt-3" style="height:7px;">
            <div class="progress-bar bg-primary" role="progressbar" style="width: {{ diskInfo.SIZE_OF_IMAGES.PERCENTAGE_OF_TOTAL }}%" aria-valuenow="{{ diskInfo.SIZE_OF_IMAGES.PERCENTAGE_OF_TOTAL }}" aria-valuemin="0" aria-valuemax="100"></div>
            <div class="progress-bar bg-success" role="progressbar" style="width: {{ diskInfo.SIZE_OF_DOCUMENTS.PERCENTAGE_OF_TOTAL }}%" aria-valuenow="{{ diskInfo.SIZE_OF_DOCUMENTS.PERCENTAGE_OF_TOTAL }}" aria-valuemin="0" aria-valuemax="100"></div>
            <div class="progress-bar bg-danger" role="progressbar" style="width: {{ diskInfo.SIZE_OF_MEDIA.PERCENTAGE_OF_TOTAL }}%" aria-valuenow="{{ diskInfo.SIZE_OF_MEDIA.PERCENTAGE_OF_TOTAL }}" aria-valuemin="0" aria-valuemax="100"></div>
            <div class="progress-bar bg-warning" role="progressbar" style="width: {{ diskInfo.SIZE_OF_ARCHIVES.PERCENTAGE_OF_TOTAL }}%" aria-valuenow="{{ diskInfo.SIZE_OF_ARCHIVES.PERCENTAGE_OF_TOTAL }}" aria-valuemin="0" aria-valuemax="100"></div>
            <div class="progress-bar bg-info" role="progressbar" style="width: {{ diskInfo.SIZE_OF_OTHER_FILES.PERCENTAGE_OF_TOTAL }}%" aria-valuenow="{{ diskInfo.SIZE_OF_OTHER_FILES.PERCENTAGE_OF_TOTAL }}" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <div class="mt-3"></div>

        {% if diskInfo.SIZE_OF_IMAGES.FILES_QUANTITY > 0 %}
            <div class="d-flex align-items-center">
                <div class="fm-file-box bg-light-primary text-primary"><i class="bx bx-image"></i>
                </div>
                <div class="flex-grow-1 ms-2">
                    <h6 class="mb-0">Images</h6>
                    <p class="mb-0 text-secondary">{{ diskInfo.SIZE_OF_IMAGES.FILES_QUANTITY }} files</p>
                </div>
                <h6 class="text-primary mb-0">{{ diskInfo.SIZE_OF_IMAGES.FOR_DISPLAY }}</h6>
            </div>
        {% endif %}

        {% if diskInfo.SIZE_OF_DOCUMENTS.FILES_QUANTITY > 0 %}
            <div class="d-flex align-items-center mt-3">
                <div class="fm-file-box bg-light-success text-success"><i class="bx bxs-file-doc"></i>
                </div>
                <div class="flex-grow-1 ms-2">
                    <h6 class="mb-0">Documents</h6>
                    <p class="mb-0 text-secondary">{{ diskInfo.SIZE_OF_DOCUMENTS.FILES_QUANTITY }} files</p>
                </div>
                <h6 class="text-primary mb-0">{{ diskInfo.SIZE_OF_DOCUMENTS.FOR_DISPLAY }}</h6>
            </div>
        {% endif %}

        {% if diskInfo.SIZE_OF_MEDIA.FILES_QUANTITY > 0 %}
            <div class="d-flex align-items-center mt-3">
                <div class="fm-file-box bg-light-danger text-danger"><i class="bx bx-video"></i>
                </div>
                <div class="flex-grow-1 ms-2">
                    <h6 class="mb-0">Media Files</h6>
                    <p class="mb-0 text-secondary">{{ diskInfo.SIZE_OF_MEDIA.FILES_QUANTITY }} files</p>
                </div>
                <h6 class="text-primary mb-0">{{ diskInfo.SIZE_OF_MEDIA.FOR_DISPLAY }}</h6>
            </div>
        {% endif %}

        {% if diskInfo.SIZE_OF_ARCHIVES.FILES_QUANTITY > 0 %}
            <div class="d-flex align-items-center mt-3">
                <div class="fm-file-box bg-light-warning text-warning"><i class="bx bx-image"></i>
                </div>
                <div class="flex-grow-1 ms-2">
                    <h6 class="mb-0">Archives</h6>
                    <p class="mb-0 text-secondary">{{ diskInfo.SIZE_OF_ARCHIVES.FILES_QUANTITY }} files</p>
                </div>
                <h6 class="text-primary mb-0">{{ diskInfo.SIZE_OF_ARCHIVES.FOR_DISPLAY }}</h6>
            </div>
        {% endif %}

        {% if diskInfo.SIZE_OF_OTHER_FILES.FILES_QUANTITY > 0 %}
            <div class="d-flex align-items-center mt-3">
                <div class="fm-file-box bg-light-info text-info"><i class="bx bx-image"></i>
                </div>
                <div class="flex-grow-1 ms-2">
                    <h6 class="mb-0">Other Files</h6>
                    <p class="mb-0 text-secondary">{{ diskInfo.SIZE_OF_OTHER_FILES.FILES_QUANTITY }} files</p>
                </div>
                <h6 class="text-primary mb-0">{{ diskInfo.SIZE_OF_OTHER_FILES.FOR_DISPLAY }}</h6>
            </div>
        {% endif %}

    </div>
</div>