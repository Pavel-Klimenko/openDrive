{# app/Resources/views/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Files{% endblock %}

{% block body %}
    {{ include('inc/sidebar.twig') }}

   {# <div class="context-menu-one">нажать на правую кнопку мыши</div>#}
    {#<div id="res"></div>#}


    <div class="col-12 col-lg-9">
        <div class="card">
            <div class="card-body">

                {# TODO поиск по имени файл в уже отфильтрованной выборке#}

                <div class="fm-search">
                    <div class="mb-0">
                        <div class="input-group input-group-lg"><span class="input-group-text bg-transparent"><i
                                        class="fa fa-search"></i></span>
                            <input type="text" class="form-control" placeholder="Search the files">
                        </div>
                    </div>
                </div>
                <br/>


                {% if response.folders %}
                    {#TODO сделать хлебную крошку#}

                    <h5>Folders:</h5>
                    <div class="row mt-3">
                        {% for foldername in response.folders %}
                            <div class="col-12 col-lg-4 context-menu">
                                <a href="{{ asset('/get-files/'~response.current_path~'-'~foldername~'') }}" style="text-decoration: none">
                                <div class="card shadow-none border radius-15">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="font-30 text-primary"><i class="bx bxs-folder"></i>
                                            </div>
                                            {#<div class="user-groups ms-auto">
                                             <img src="https://bootdey.com/img/Content/avatar/avatar1.png" width="35" height="35" class="rounded-circle" alt="">
                                             <img src="https://bootdey.com/img/Content/avatar/avatar2.png" width="35" height="35" class="rounded-circle" alt="">
                                             </div>
                                             <div class="user-plus">+</div>#}
                                        </div>

                                            <h6 class="mb-0 text-primary">{{ foldername }}</h6>


                                        {#<small>15 files</small>#}
                                    </div>
                                </div>
                            </a>
                            </div>


                        {% endfor %}
                    </div>
                {% endif %}


                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="mb-0">Files:</h5>
                    </div>
                    <div class="ms-auto"><a href="{{ asset(response.current_path) }}" class="btn btn-sm btn-outline-secondary">View all</a>
                    </div>
                </div>

                {% if response.files %}
                    <div class="table-responsive mt-3">
                        <table class="table table-striped table-hover table-sm mb-0">
                            <thead>
                            <tr>
                                <th>Name <i class="bx bx-up-arrow-alt ms-2"></i>
                                </th>
                                <th>Type</th>
                                <th>Extension</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for file in response.files %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center context-menu" data-test="test" style="cursor: pointer">
                                            <div>
                                                <i class="{{ file.FILE_STYLES.ICON_CLASS }} me-2 font-24 {{ file.FILE_STYLES.COLOR_CLASS }}"></i>
                                            </div>
                                            <div class="font-weight-bold text-secondary">{{ file.NAME }}</div>
                                        </div>
                                    </td>
                                    <td>{{ file.EXTENSION }}</td>
                                    <td>{{ file.FILE_TYPE }}</td>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="table-responsive mt-3 text-danger">Files not found</div>
                {% endif %}


            </div>
        </div>
    </div>
{% endblock %}